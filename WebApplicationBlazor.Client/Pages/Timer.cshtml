@using System.Threading

    <div>
        <button onclick="@RefreshDueTime" type="button" class="btn btn-info btn-sm">
            Remaining <span class="font-weight-bold">@seconds</span> seconds
        </button>
    </div>

@functions{
    [Parameter]
    public DateTime DueDate { get; set; }    

    int seconds = 0;

    protected override async Task OnInitAsync()
    {
        RefreshDueTime();
    }

    private void RefreshDueTime()
    {
        seconds = Convert.ToInt32((DueDate - DateTime.Now).TotalSeconds);
    }
}